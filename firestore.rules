rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function kiểm tra đã đăng nhập chưa
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function kiểm tra có phải chủ sở hữu dữ liệu không
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rule cho collection "users"
    match /users/{userId} {
      // Chỉ cho phép đọc/ghi nếu user đó chính là chủ sở hữu document
      allow read, write: if isSignedIn() && isOwner(userId);

      // Các sub-collections (ví dụ: activities, health_data) cũng thừa hưởng quyền này
      match /{document=**} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }

    // Chặn truy cập mặc định với các collection khác
    match /{document=**} {
      allow read, write: if false;
    }
  }
}